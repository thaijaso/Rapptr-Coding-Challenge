<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:gravity="top"
    android:orientation="horizontal"
    tools:background="@color/background"
    tools:ignore="UseCompoundDrawables">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/avatarImageView"
        android:layout_width="@dimen/chat_activity_circle_image_width"
        android:layout_height="@dimen/chat_activity_circle_image_height"
        android:src="@drawable/ic_avatar_placeholder"
        app:civ_border_width="@dimen/chat_activity_circle_image_border_width"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/chat_activity_image_margin_right"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_activity_name_text_view_margin_left"
            android:layout_marginBottom="@dimen/chat_activity_name_text_view_margin_bottom"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/chat_text"
            android:fontFamily="sans-serif-medium"
            tools:text="Alex" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/chat_text"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/chat_bubble"
            android:layout_marginRight="@dimen/chat_activity_message_text_view_margin_right"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse pharetra, sapien at luctus semper, justo dui accumsan lorem, nec pretium dui eros pharetra leo." />
    </LinearLayout>

</LinearLayout>